<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:RandomReminderApp.Models"
             x:Class="RandomReminderApp.MainPage">

    <VerticalStackLayout 
        Padding="30,0"
        Spacing="25">

        <Label Text="Reminders:"
               Style="{StaticResource Headline}"
               SemanticProperties.HeadingLevel="Level1" />

        <CollectionView>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type model:Reminder}">
                    <model:Reminder Name="Mindfulness Exercise 1"/>
                    <model:Reminder Name="Mindfulness Exercise 2"/>
                    <model:Reminder Name="Mindfulness Exercise 3"/>
                </x:Array>
            </CollectionView.ItemsSource>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Reminder">
                    <HorizontalStackLayout>
                        <Label Text="{Binding Name}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Create new" 
                SemanticProperties.Hint="Create new reminder"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>

</ContentPage>
